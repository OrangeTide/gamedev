$(BEGIN_TARGET)
NAME = tiny
TYPE = exe
SRCS = tiny.c
INCLUDEDIR = include
CFLAGS = -Wall -W -O2
CFLAGS += -g
INCLUDEDIRS = include
### Windows
CFLAGS.Windows_NT = -mwin32 -mwindows -municode
LDFLAGS.Windows_NT = -mwin32 -mwindows -municode
LDLIBS.Windows_NT = -lkernel32 -luser32 -lshell32 -lopengl32 -lgdi32
CPPFLAGS.Windows_NT =
### Linux
LDLIBS.Linux = -lm -ldl -lEGL -lGLESv2 -lX11 -lXcursor -lXi
CFLAGS.Linux = -flto=auto
LDFLAGS.Linux = -flto=auto
$(END_TARGET)
